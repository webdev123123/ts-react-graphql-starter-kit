{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./modules",
    "jsx": "react",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["./dist", "./es"]
}
